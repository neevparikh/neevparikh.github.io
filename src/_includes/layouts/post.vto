<!doctype html>
<html lang="en" class="{{ baseStyle }}">
  {{ include "layouts/head.vto" }}

  <body class="{{ bodyStyle }}">
    {{ include "layouts/header.vto" }}
    <main class="{{ mainStyle }}">
      <div class="mb-8 text-base16-700 flex-none basis-sm">
        <h1 class="text-xl md:text-3xl font-semibold mb-2">{{ title }}</h1>
        <h3 class="text-xs md:text-base mb-4 text-base16-500">{{ description }}</h3>
        <p class="text-[10px] md:text-sm font-bold text-base16-yellow/70 mb-2"><span>{{ date |> date('dd MMM, yyyy') }}</span><span class="text-base16-400 mx-2 md:mx-3">â€¢</span><span class="text-base16-yellow/60">{{ readingInfo.minutes }} min</span></p>
      </div>
      <div class="{{ contentStyle }} grow"> 
        {{ content }}
      </div>
    </main>
    <footer class="basis-sm flex-none flex flex-col md:flex-row md:justify-between text-base16-300 text-xs md:text-sm gap-2 md:gap-0">
      <span>tags: {{ tags.filter(t => t !== "post").join(", ") }}</span>
      <span>&copy; 2025 Neev Parikh</span>
    </footer>
  </body>
</html>
