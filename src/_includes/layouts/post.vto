<!doctype html>
<html lang="en" class="{{ overallSiteStyle }}">
  {{ include "layouts/head.vto" }}

  <body class="{{ bodyStyle }}">
    {{ include "layouts/header.vto" }}
    <main class="{{ mainStyle }}">
      <div class="mb-8 text-base16-700 flex-none basis-sm">
        <h1 class="text-3xl font-semibold mb-2">{{ title }}</h1>
        <h3 class="text-[12px] md:text-[14px] mb-4 text-base16-500">{{ description }}</h3>
        <p class="text-[10px] md:text-[12px] font-bold text-base16-yellow/70 mb-2">{{ date |> date('dd MMM, yyyy') }} | {{ readingInfo.minutes }} min</p>
      </div>
      <div class="{{ contentStyle }}"> 
        {{ content }}
      </div>
    </main>
    {{ include "layouts/footer.vto" }}
  </body>
</html>
